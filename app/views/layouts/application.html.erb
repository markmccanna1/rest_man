<!DOCTYPE html>
<html>
<head>
  <title>RestMan</title>

  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <script src="http://code.jquery.com/jquery-1.8.3.min.js"></script>

</head>
<body class="<%= params[:controller] %>">
  <header>
    <h2>RestMan</h2>
    <% if current_customer_profile || current_restaurant_profile %>
      <div class="log-out">
        <span><%= link_to "Log Out", logout_path, method: :post, :class => "logout"%></span>
      </div>
    <% end %>
  </header>
  <% if current_restaurant_profile %>
    <nav>
      <ul>
        <li><%= link_to "View Outstanding Orders", carts_url %></li>
        <li><%= link_to "Back to Dashboard", restaurant_dashboard_url %></li>
      </ul>
    </nav>
  <% end %>
<%= yield %>
</body>
</html>
