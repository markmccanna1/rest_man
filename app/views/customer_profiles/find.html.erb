<div data-role="page" id="page1">
    <div data-theme="a" data-role="header">
        <h3>
            Search Page
        </h3>
    </div>
    <div data-role="content">
        <form action="/customer_profiles/find/" method ="get" id="search_form">
            <div data-role="fieldcontain">
                <input name="query" class="ui-input-search" id="filter" placeholder="Find a Restaurant" value="" type="search">
                <span id="filter-count"></span>
            </div>
            <input type="submit" data-inline="true" value="Submit" id="submit">
        </form>
        <br>
    <% if @restaurants %>
      <% @restaurants.each do |restaurant| %>
        <li><%= link_to restaurant.restaurant_name, restaurant_profile_path(restaurant) %></li>
      <% end %>
    <% end %>
    </div>
</div>
